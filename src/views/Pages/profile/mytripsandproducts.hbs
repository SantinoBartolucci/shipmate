<div class='tripsandprojects-wrapper'>
	<div class='tripsandprojects-container'>
		<div class='productsortrips-section'>
			<div class='productsortrips-section-header'>
				<h1>Mis Pedidos</h1>
			</div>
			<div class='productsortrips-section-body'>
				{{#each products}}
					<div class='productsortrips-section-item'>
						<div class='productsortrips-item-container'>
							<a style="cursor: default;"> {{this.name}} </a>
							<a href="/mytripsandproducts/product/del/{{this.id}}"><img src='img/trash-solid.svg' alt='' /></a>
						</div>
					</div>
				{{/each}}
				<div class='productsortrips-section-additem'>
					<a href="/comprar"><img src='/img/plus-solid.svg' alt='' /></a>
				</div>
			</div>
		</div>
		<div class='productsortrips-section'>
			<div class='productsortrips-section-header'>
				<h1>Mis Viajes</h1>
			</div>
			<div class='productsortrips-section-body'>
				{{#each travels}}
					<div class='productsortrips-section-item'>
						<div class='productsortrips-item-container'>
							<div>
								<h3 style="cursor: default;"> Destino: <span style="font-weight: 500;">{{place_to}}</span> </h3>
								<h3 style="cursor: default;"> Desde: <span style="font-weight: 500;">{{date_start}}</span> </h3>
								<h3 style="cursor: default;"> Hasta: <span style="font-weight: 500;">{{date_end}}</span> </h3>
							</div>
							<a href="/mytripsandproducts/trip/del/{{this.id}}"><img src='img/trash-solid.svg' alt='' /></a>
						</div>
					</div>
				{{/each}}
				<div class='productsortrips-section-additem'>
					<a href="/viajar"><img src='/img/plus-solid.svg' alt='' /></a>
				</div>
			</div>
		</div>
	</div>
</div>